{
  "name": "app",
  "version": "1.0.0",
  "description": "The actual source files of a software project are usually stored inside the src folder. Alternatively, you can put them into the lib (if you're developing a library), or into the app folder (if your application's source files are not supposed to be compiled).",
  "main": "./src/index.js",
  "type": "module",
  "scripts": {
    "dev:server:watch": "nodemon -L ./src/index.js --ext js --exec node ./src/index.js",
    "dev:prisma:watch": "nodemon -L --watch prisma --ext prisma --exec 'dotenv -e .env.dev -- npx prisma db push --accept-data-loss && npx prisma studio'",
    "dev:watch": "NODE_ENV=dev concurrently \"npm:dev:server:watch\" \"npm:dev:prisma:watch\"",
    "start:dev": "NODE_ENV=dev npm run prisma:push && node ./src/index.js",
    "start:test": "NODE_ENV=test npm run prisma:push && node ./src/index.js",
    "prisma:push": "npx prisma generate && npx prisma db push --accept-data-loss",
    "seed": "NODE_ENV=dev node prisma/seed.js",
    "test:unit": "cross-env NODE_ENV=test jest --testMatch=\"**/tests/unit/**/*.test.js\"",
    "test:integration": "cross-env NODE_ENV=test jest --runInBand --testMatch=\"**/tests/integration/**/*.test.js\"",
    "lint": "eslint . --ext js --report-unused-disable-directives",
    "lint-fix": "eslint . --ext js --report-unused-disable-directives --fix",
    "format": "prettier --write './**/*.js'",
    "format-and-lint": "npm run format && npm run lint-fix"
  },
  "_moduleAliases": {
    "@": "src/*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@prisma/client": "^5.15.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "nodemailer": "^6.9.13",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.1",
    "prisma": "^5.15.0",
    "supertest": "^7.0.0"
  }
}
